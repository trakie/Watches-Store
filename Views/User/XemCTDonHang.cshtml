@model IEnumerable<Watches.CHITIETDONTHANG>

@{
    ViewBag.Title = "XemCTDonHang";
}

<h2>Xem chi tiết đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            Mã đơn hàng
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDonHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dongia) VNĐ
        </td>
      
    </tr>
}
    <tr>
        <td colspan="2">Tổng số lượng: @ViewBag.TongSL</td>
        <td colspan="2">Tổng tiền: @ViewBag.TongTien VNĐ</td>
    </tr>
</table>
