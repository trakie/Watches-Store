@model IEnumerable<Watches.CHITIETDONTHANG>
@{
    ViewBag.Title = "ListOrderDetail";
    //Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    //Layout = null;
}
<head>
    <style>
        h2 {
            text-align: center;
            font: Brush Script MT;
        }
        .styled-table {
            align:center;
            border-collapse: collapse;
            margin-left: 250px ;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }
        .styled-table thead tr {
                background-color: #009879;
                color: #ffffff;
                text-align: left;
        }
        .styled-table th,
        .styled-table td {
              padding: 12px 15px;
        }
        .styled-table tbody tr {
              border-bottom: 1px solid #dddddd;
        }

        .styled-table tbody tr:nth-of-type(even) {
              background-color: #f3f3f3;
        }

        .styled-table tbody tr:last-of-type {
              border-bottom: 2px solid #009879;
        }
        .styled-table tbody tr.active-row {
        font-weight: bold;
        color: #009879;
        }
    </style>
</head>




<h2>Danh sách chi tiết đơn hàng</h2>
<table class="styled-table">
    <thead>
        <tr>
            <th>
                Mã đơn hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="active-row">
                <td>
                    @Html.DisplayFor(modelItem => item.MaDonHang)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dongia)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "EditOrderDetail", new { @id = item.MaSP})|*@
                    @Html.ActionLink("Delete", "DeleteOD", new { @Proid = item.MaSP,@OdID=item.MaDonHang })
                </td>
            </tr>
        }

        <tr class="active-row">
            <td style="color:black" >Tình trạng thanh toán:</td>
            <td style="color:red" >@ViewBag.ThanhToan</td>
            <td style="color: black">Tình trạng giao hàng:</td>
            <td style="color:red" >@ViewBag.GiaoHang</td>
        </tr>
       
    </tbody>
</table>